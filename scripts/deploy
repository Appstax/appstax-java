#!/usr/bin/env bash -eu
# Temporary local "deploy"

cd "$(dirname "$0")"/..

SOURCE="target/appstax-java-1.0.0-jar-with-dependencies.jar"
TARGET1="dist/appstax-java.jar"
TARGET2="../appstax-android/src/appstax/libs/appstax-java.jar"

mvn package

rm -f "$TARGET1" "$TARGET2"
cp "$SOURCE" "$TARGET1"
cp "$SOURCE" "$TARGET2"
